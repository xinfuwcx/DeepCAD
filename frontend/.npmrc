# Frontend dependency management configuration
# Use pnpm for faster, more efficient package management

# Use pnpm as the package manager
engine-strict=true

# Hoist packages to reduce duplication
hoist=true

# Auto-install peers
auto-install-peers=true

# Strict peer dependencies
strict-peer-dependencies=false

# Registry configuration
registry=https://registry.npmjs.org/

# Save exact versions for production dependencies
save-exact=true

# Prevent auto-updating lockfile during install
prefer-frozen-lockfile=true

# Use node-linker for better compatibility
node-linker=isolated

# Enable dedupe for smaller node_modules
dedupe-peer-dependents=true